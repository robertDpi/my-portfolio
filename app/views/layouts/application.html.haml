!!!
%html{'xmlns' => 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en'}
  %head
    -# %title= yield(:title) || "Your Portfolio Website"
    %title= page_title
    = stylesheet_link_tag "application"
    = javascript_include_tag :all
    = csrf_meta_tag

  %body{:class => @bodyclass}
    %div#sidebar
      %h1= 'Your Portfolio Site'
      %ul#navigation
        %li= link_to_unless_current("About you", about_path)
        %li= link_to_unless_current("Your projects", projects_path)
        %li= link_to_unless_current("Contact", contact_path)

    %div#content
      - if !flash[:notice].blank?
        %div.notice= flash[:notice]
      = yield

    - if user_signed_in?
      %p#authentication
        = "Logged in as #{current_user.email}"
        = link_to "Logout", destroy_user_session_path

    %div#footer
      